# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# Youtube Webhook
WEBSUB_CALLBACK_URL=https://your-api-subdomain.yourdomain.com/webhooks/youtube
WEBSUB_SECRET=<generate-a-random-secret>
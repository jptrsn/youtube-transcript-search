# Database
POSTGRES_USER=ytuser
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=youtube_transcripts

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key

# Application URLs
PUBLIC_API_URL=https://your-api-subdomain.yourdomain.com
FRONTEND_ORIGIN=https://your-frontend-subdomain.yourdomain.com

# Remote server (for deployment scripts)
REMOTE_HOST=user@your-vps-ip

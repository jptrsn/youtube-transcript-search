{
  "name": "YtScriBe",
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://ytscri.be/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://ytscri.be/*"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-transcript-search@ytscri.be",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "background": {
    "scripts": ["background/service-worker.js"]
  }
}